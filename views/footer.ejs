<script>
  function editPost(postText, index) {
    // Set the textarea value to the post text
    document.getElementById('postTextarea').value = postText;
    // Create a hidden input to store the index of the post being edited
    const hiddenInput = document.createElement('input');
    hiddenInput.type = 'hidden';
    hiddenInput.name = 'postIndex';
    hiddenInput.value = index;
    
    // Append the hidden input to the form
    const form = document.querySelector('form[action="/"]');
    form.appendChild(hiddenInput);
    
    // Change the button to save the updated content
    const button = form.querySelector('button[type="submit"]');
    button.innerText = 'Save Changes';
    button.setAttribute('formaction', '/update/' + index);
  }
</script>
